{
  "variables": {
    "build_name": "{{env `BUILD_NAME`}}",
    "build_version": "{{env `BUILD_VERSION`}}",
    "core": "1",
    "memory": "1024",
    "disk_size": "51200",
    "ssh_port": "22",
    "ssh_wait_timeout": "10000s",
    "iso_url": "http://172.16.2.254/Packer/isos/openSUSE-Leap-42.1-DVD-x86_64.iso",
    "iso_md5": "2bc74929bfa9772a5637f76ddde8784b",
    "vm_name": "{{env `VM_NAME`}}"
  },
  "builders": [
    {
      "name": "{{user `build_name`}}-{{user `build_version`}}",
      "type": "qemu",
      "format": "qcow2",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_md5`}}",
      "iso_checksum_type": "md5",
      "output_directory": "disk",
      "shutdown_command": "shutdown -h now",
      "qemu_binary": "/usr/bin/qemu-kvm",
      "qemuargs": [
          [ "-m", "size={{user `memory`}}" ],
          [ "-smp", "2,sockets=2,cores={{user `core`}},threads=1" ],
          [ "-drive", "file=disk/{{user `vm_name`}}.qcow2,if=none,id=drive-scsi0-0-0-0,cache=writeback" ],
          [ "-device", "virtio-scsi-pci,id=scsi0,bus=pci.0" ],
          [ "-device", "scsi-hd,bus=scsi0.0,channel=0,scsi-id=0,lun=0,drive=drive-scsi0-0-0-0,id=scsi0-0-0-0,bootindex=1" ],
          [ "-device", "virtio-net,netdev=user.0" ],
          [ "-device", "virtio-serial-pci,id=virtio-serial0,bus=pci.0" ],
          [ "-chardev", "socket,id=charchannel0,path=/var/lib/libvirt/qemu/org.qemu.guest_agent,server,nowait" ],
          [ "-device", "virtserialport,bus=virtio-serial0.0,nr=1,chardev=charchannel0,id=channel0,name=org.qemu.guest_agent.0" ],
          [ "-device", "virtio-balloon-pci,id=balloon0,bus=pci.0" ]
      ],
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "headless": true,
      "vm_name": "{{user `vm_name`}}",
      "net_device": "virtio-net",
      "disk_interface": "scsi",
      "boot_wait": "5s",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "yunshan3302",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "boot_command":
      [
        "<esc><enter><wait>",
        "linux netsetup=dhcp lang=en_US hostname=build netdevice=eth0",
        " autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/autoinst-13.2.xml",
        " textmode=1 insecure=1<wait><enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
          "scripts/base.sh",
          "scripts/zerodisk.sh",
          "scripts/custom_kvm.sh",
          "scripts/cleanup.sh"
      ]
    }
  ]
}