{
  "variables": {
	"build_name": "{{env `BUILD_NAME`}}",
	"build_version": "{{env `BUILD_VERSION`}}",
	"core": "1",
	"memory": "1024",
	"disk_size": "51200",
	"ssh_port": "22",
	"ssh_wait_timeout": "10000s",
	"iso_url": "http://172.16.2.254/Packer/isos/CentOS-7.0-1406-x86_64-Minimal.iso",
	"iso_md5": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
	"vbox_url": "http://172.16.2.254/Packer/isos/VBoxGuestAdditions_5.0.16.iso",
	"vbox_sha256": "8190f1e4031f8195971c2a97d2d3b1cf2d86fc83219f750d05cee9255c7dad85",
	"vm_name": "{{env `VM_NAME`}}"
  },
  "builders": [
    {
      "name": "{{user `build_name`}}-{{user `build_version`}}",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_md5`}}",
      "iso_checksum_type": "sha256",
      "output_directory": "disk",
      "guest_additions_url": "{{user `vbox_url`}}",
      "guest_additions_sha256": "{{user `vbox_sha256`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; sh '/tmp/shutdown.sh'",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ],
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "headless": true,
      "vm_name": "{{user `vm_name`}}",
      "boot_wait": "10s",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "yunshan3302",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sh '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/virtualbox.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "{{user `build_name`}}.box"
        }
      }
    }
  ]
}